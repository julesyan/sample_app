<!-- This page must exist so that we can edit a user-->
<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
    <div class="span6 offset3">
        <!-- uses the @user instance veriable to edit pages
            This method uses POST because the user already exists -->
        <%= form_for(@user) do |f| %>
            <!--Shows the error msgs. Uses the msgs form shared/ so that 
                multiple controllers can access it (the errors for this 
                specific user -->
            <%= render 'shared/error_messages' %>

            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation, "Confirm Password" %>
            <%= f.password_field :password_confirmation %>

            <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
        <% end %>

        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails">change</a>
    </div>
</div>